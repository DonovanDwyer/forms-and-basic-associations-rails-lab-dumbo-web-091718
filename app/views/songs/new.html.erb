<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :song_genre_id %>
  <%= f.text_field :genre_name, list: "song_genre_id", id: "song_genre_id"%>
  <datalist id="song_genre_id">
    <% Genre.all.each do |genre| %>
    <option value = "<%= genre.name %>">
    <% end %>
  </datalist>
  <br />
  <input name="song[song_notes_ids][]" id="song_notes_1"><br>
  <input name="song[song_notes_ids][]" id="song_notes_2"><br>
  <input name="song[song_notes_ids][]" id="song_notes_3"><br>
  <input name="song[song_notes_ids][]" id="song_notes_4"><br>
  <input name="song[song_notes_ids][]" id="song_notes_5">
  <br />
  <%= f.submit %>
<% end %>
